        opacity: 0;
    }
}
/* Animasi untuk sidebar terbuka */
.app-sidebar.open {
    transform: translateX(0);
    box-shadow: 8px 0 25px rgba(0, 0, 0, 0.15);
}

/* Enhanced mobile animations */
@media (max-width: 768px) {
    .app-sidebar.open {
        box-shadow: 8px 0 40px rgba(0, 0, 0, 0.3);
    }
}

/* Animasi untuk elemen-elemen di dalam sidebar */
.app-sidebar.open .sidebar-header,
.app-sidebar.open .user-info,
.app-sidebar.open .active-ta,
.app-sidebar.open .app-nav-button,
.app-sidebar.open .logout-btn {
    animation: slideInFromLeft 0.4s ease-out forwards;
}

/* Delay animasi untuk setiap elemen agar terlihat berurutan */
.app-sidebar.open .user-info {
    animation-delay: 0.1s;
}

.app-sidebar.open .active-ta {
    animation-delay: 0.15s;
}

.app-sidebar.open .app-nav-button:nth-child(1) {
    animation-delay: 0.2s;
}

.app-sidebar.open .app-nav-button:nth-child(2) {
    animation-delay: 0.25s;
}

.app-sidebar.open .app-nav-button:nth-child(3) {
    animation-delay: 0.3s;
}

.app-sidebar.open .app-nav-button:nth-child(4) {
    animation-delay: 0.35s;
}
.app-sidebar.open .app-nav-button:nth-child(5) {
    animation-delay: 0.4s;
}

.app-sidebar.open .app-nav-button:nth-child(6) {
    animation-delay: 0.45s;
}

.app-sidebar.open .app-nav-button:nth-child(7) {
    animation-delay: 0.5s;
}

.app-sidebar.open .app-nav-button:nth-child(8) {
    animation-delay: 0.55s;
}
.app-sidebar.open .app-nav-button:nth-child(9) {
    animation-delay: 0.6s;
}.app-sidebar.open .app-nav-button:nth-child(10) {
    animation-delay: 0.65s;
}

.app-sidebar.open .logout-btn {
    animation-delay: 0.4s;
}

/* Keyframe untuk animasi slide in dari kiri */
@keyframes slideInFromLeft {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.loading-spinner {
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top: 3px solid white;
    width: 16px;
    height: 16px;
    animation: spin 1s linear infinite;
    display: inline-block;
    vertical-align: middle;
    margin-right: 0.5rem;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}